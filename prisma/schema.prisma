generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
  directUrl = env("DATABASE_URL")
  relationMode = "prisma"
}

model Session {
  id            String    @id
  storeHash     String?
  storeDomain   String?
  state         String
  isOnline      Boolean   @default(false)
  scope         String?
  expires       DateTime?
  accessToken   String
  userId        BigInt?
  firstName     String?
  lastName      String?
  email         String?
  accountOwner  Boolean   @default(false)
  locale        String?
  collaborator  Boolean?  @default(false)
  emailVerified Boolean?  @default(false)

  @@index([storeHash])
}

model StoreUser {
  id        String   @id @default(cuid())
  storeHash String
  bcUserId  BigInt
  email     String
  isOwner   Boolean  @default(false)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([storeHash, bcUserId])
  @@index([storeHash])
}

